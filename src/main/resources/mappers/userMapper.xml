<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ahn.sns.user.dao.UserDAO">

	<insert id="insertUser" parameterType="map">
		INSERT INTO
			`user`
		(
			`loginId`
			, `password`
			, `name`
			, `email`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{loginId}
			, #{password}
			, #{name}
			, #{email}
			, now()
			, now()
		)
	</insert>
	
	<select id="selectId" parameterType="string"
	resultType="com.ahn.sns.user.model.User">
		SELECT
			`id`
			, `loginId`
			, `password`
			, `name`
			, `email`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	
	<select id="selectLogin" parameterType="map"
	resultType="com.ahn.sns.user.model.User">
		SELECT
			`id`
			, `loginId`
			, `password`
			, `name`
			, `email`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
			AND `password` = #{password}
	</select>
	
	<select id="selectPasswordSearch" parameterType="map"
	resultType="com.ahn.sns.user.model.User">
		SELECT
			`id`
			, `loginId`
			, `password`
			, `name`
			, `email`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
			AND `email` = #{email}
	</select>
	
	<update id="updatePassword" parameterType="map">
		UPDATE
			`user`
		SET
			`password` = #{password}
			, `updatedAt` = now()
		WHERE
			`id` = #{id}	
	</update>
	
</mapper>