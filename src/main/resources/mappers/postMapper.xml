<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ahn.sns.post.dao.PostDAO">
	
	<select id="mainPost" parameterType="map"
	resultType="com.ahn.sns.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `tag`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		ORDER BY `id` DESC

	</select>
	
	<insert id="insertPost" parameterType="map">
		INSERT INTO
			`post`
		(
			`userId`
			, `tag`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{userId}
			, #{title}
			, #{content}
			, #{imagePath}
			, now()
			, now()
		)
	</insert>
	

</mapper>